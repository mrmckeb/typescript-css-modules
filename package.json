{
  "name": "typescript-plugin-css-modules",
  "version": "2.1.1",
  "main": "lib/index.js",
  "author": "Brody McKee <mrmckeb@hotmail.com>",
  "license": "MIT",
  "description": "CSS modules support for TypeScript",
  "homepage": "https://github.com/mrmckeb/typescript-plugin-css-modules",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrmckeb/typescript-plugin-css-modules"
  },
  "keywords": [
    "css",
    "scss",
    "sass",
    "less",
    "modules",
    "plugin",
    "postcss",
    "typescript"
  ],
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rm -rf ./lib && tsc",
    "lint": "eslint './src/**/*.ts' --max-warnings 0 && yarn prettier './**/*.{json,md,ts,yml}' -c",
    "prepublishOnly": "yarn build",
    "test": "jest ./src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/**/*.{ts}"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/fixtures/"
    ]
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "./**/*.{json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "trailingComma": "all"
  },
  "resolutions": {
    "postcss": "7.0.23"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "icss-utils": "^4.1.1",
    "less": "^3.9.0",
    "lodash.camelcase": "^4.3.0",
    "postcss": "^7.0.23",
    "postcss-filter-plugins": "^3.0.1",
    "postcss-icss-selectors": "^2.0.3",
    "postcss-load-config": "^2.1.0",
    "reserved-words": "^0.1.2",
    "sass": "^1.23.7"
  },
  "devDependencies": {
    "@types/icss-utils": "^4.1.0",
    "@types/jest": "^24.0.23",
    "@types/less": "^3.0.1",
    "@types/lodash.camelcase": "^4.3.6",
    "@types/node": "^12.12.17",
    "@types/postcss-load-config": "^2.0.1",
    "@types/postcss-nested": "^4.1.0",
    "@types/reserved-words": "^0.1.0",
    "@types/sass": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^2.11.0",
    "@typescript-eslint/parser": "^2.11.0",
    "bootstrap": "4.4.1",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "husky": "^3.1.0",
    "jest": "^24.8.0",
    "lint-staged": "^9.5.0",
    "postcss-import-sync2": "^1.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.3"
  },
  "peerDependencies": {
    "typescript": "^3.0.0"
  }
}
